{
  "productName": "ValeChat",
  "version": "0.1.0",
  "identifier": "ai.valechat.app",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist",
    "withGlobalTauri": false
  },
  "app": {
    "security": {
      "csp": "default-src 'self' data: https: wss: ws: 'unsafe-eval' 'unsafe-inline'",
      "devCsp": "default-src 'self' data: https: http: wss: ws: 'unsafe-eval' 'unsafe-inline'",
      "dangerousDisableAssetCspModification": false,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["**"],
          "deny": []
        }
      }
    },
    "windows": [
      {
        "title": "ValeChat",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "center": true,
        "fullscreen": false,
        "maximized": false,
        "visible": true,
        "decorations": true,
        "alwaysOnTop": false,
        "contentProtected": false,
        "skipTaskbar": false,
        "theme": "Auto",
        "titleBarStyle": "Visible"
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "ValeChat - Multi-Model AI Chat"
    }
  },
  "bundle": {
    "active": true,
    "category": "Developer Tool",
    "copyright": "Copyright Â© 2024 ValeChat",
    "deb": {
      "depends": [
        "libwebkit2gtk-4.0-37",
        "libgtk-3-0",
        "libayatana-appindicator3-1"
      ],
      "section": "utils",
      "priority": "optional",
      "changelog": "See https://github.com/valechat/valechat/releases for changelog"
    },
    "dmg": {
      "appPosition": {
        "x": 180,
        "y": 170
      },
      "applicationFolderPosition": {
        "x": 480,
        "y": 170
      },
      "windowSize": {
        "width": 660,
        "height": 400
      }
    },
    "appimage": {
      "bundleMediaFramework": false
    },
    "rpm": {
      "epoch": 0,
      "release": "1",
      "section": "Applications/Internet",
      "requires": [
        "webkit2gtk3",
        "gtk3",
        "libappindicator-gtk3"
      ]
    },
    "nsis": {
      "displayLanguageSelector": true,
      "installerIcon": "icons/icon.ico", 
      "installMode": "currentUser",
      "languages": ["English"],
      "template": "installer.nsi"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.sectigo.com"
    },
    "longDescription": "ValeChat is a cross-platform desktop application that provides access to multiple AI models with local MCP server support, expense tracking, and native experience across Linux, macOS, and Windows.",
    "shortDescription": "Multi-model AI chat application with MCP server support",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png", 
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "identifier": "ai.valechat.app",
    "targets": "all",
    "externalBin": [],
    "resources": [
      "resources/*"
    ]
  },
  "updater": {
    "active": true,
    "endpoints": [
      "https://api.github.com/repos/valechat/valechat/releases/latest"
    ],
    "dialog": true,
    "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IFZhbGVDaGF0IFB1YmxpYSBLZXkKUldROU10eTIxc2JIMmQyQUhnbXNFOW1nK2NtSVVYdXFqL3VwNUhJWUc0VWFXQjVSMnE5WWt6T3JZRW9OUUVLK3JqRFJFdUhBPQo="
  },
  "plugins": {
    "shell": {
      "all": true,
      "execute": true,
      "sidecar": true,
      "open": true
    },
    "dialog": {
      "all": true,
      "ask": true,
      "confirm": true,
      "message": true,
      "open": true,
      "save": true
    },
    "fs": {
      "all": true,
      "readFile": true,
      "writeFile": true,
      "readDir": true,
      "copyFile": true,
      "createDir": true,
      "removeDir": true,
      "removeFile": true,
      "renameFile": true,
      "exists": true,
      "scope": ["$APPDATA/*", "$APPDATA/ValeChat/*", "$LOCALDATA/*", "$LOCALDATA/ValeChat/*"]
    },
    "globalShortcut": {
      "all": true
    },
    "http": {
      "all": true,
      "request": true,
      "scope": [
        "https://api.openai.com/*",
        "https://api.anthropic.com/*", 
        "https://generativelanguage.googleapis.com/*",
        "https://api.github.com/*"
      ]
    },
    "notification": {
      "all": true
    },
    "os": {
      "all": true
    },
    "path": {
      "all": true
    },
    "process": {
      "all": false,
      "exit": true,
      "relaunch": true
    },
    "store": {
      "all": true,
      "createStore": true
    },
    "updater": {
      "all": true,
      "check": true,
      "download": true,
      "install": true
    }
  }
}